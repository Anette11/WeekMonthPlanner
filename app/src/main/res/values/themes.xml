<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeekMonthPlanner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_light</item>
    </style>

    <style name="Tiny_Lato_16sp" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>
</resources>